<div class="w-full mt-4 ml-4 mr-4">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="relative flex flex-col w-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
    <div class="relative mx-4 mt-4 mr-4 overflow-hidden text-gray-700 bg-white rounded-none bg-clip-border">
      <div class="flex flex-col items-center gap-8 mb-4 md:flex-row md:items-center md:justify-between">
        <div>
          <h1 class="block font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-center text-blue-gray-900 md:text-left">
            Categorías
          </h1>
        </div>
        <div class="flex justify-center w-full gap-2 mr-4 shrink-0 md:w-max md:justify-start">
          <%= link_to "Nueva Categoría", new_admin_category_path, class: "flex select-none items-center gap-3 rounded-lg bg-gray-900 py-2 px-4 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" %>
        </div>
      </div>
    </div>

    <section class="flex flex-col w-full py-16 bg-muted">
      <div class="container px-4 mx-auto">
        <div id="categories" class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          <% @categories.each do |category| %>
            <div class="p-6 transition-shadow border rounded-lg cursor-pointer group hover:shadow-lg">
              <div class="flex flex-col items-center text-center">
                <img
                  src="<%= category.image_url %>" 
                  alt="<%= category.name %>"
                  class="object-cover w-24 h-24 mb-4 rounded-full"
                />
                <h4 class="mb-4 font-semibold transition-colors group-hover:text-primary">
                  <%= category.name %>
                </h4>
                <p><%= category.description %></p>
                <%= link_to t('categories.show'), admin_category_path(category), class: "hover:bg-gray-400 rounded-lg py-2 px-4 bg-gray-200 inline-block font-medium mt-4" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
