<% if notice.present? %>
  <div id="notice" class="flex items-center justify-center p-4 text-sm text-green-800 bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
    <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
    </svg>
    <span class="sr-only">Info</span>
    <div>
      <span class="font-medium">!</span> <%= notice %>
    </div>
  </div>
  <% end %>



<div class="relative flex items-center justify-center w-screen min-h-screen overflow-hidden">


  <!-- Blurred gradient background -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 opacity-75 bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500"></div>
    <div class="absolute inset-0 opacity-50 bg-gradient-to-tr from-yellow-300 via-green-400 to-teal-500 mix-blend-overlay"></div>
    <div class="absolute inset-0 backdrop-blur-3xl"></div>
  </div>
  
  <!-- Content container -->
  <div class="relative z-10 max-w-md p-8 mx-4 bg-white bg-opacity-20 rounded-xl backdrop-blur-lg">
    <h1 class="text-2xl font-bold text-white sm:text-4xl">Your Content Here</h1>
    <p class="mt-4 text-base text-white sm:text-lg">This is where you can add your main content.</p>
  </div>
</div>

  <script>
    // Oculta el mensaje despu√©s de 3 segundos
    setTimeout(function() {
      document.getElementById("notice").style.display = "none";
    }, 5000);
  </script>
