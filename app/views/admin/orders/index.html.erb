
<% if notice.present? %>
  <%= render "shared/succes_alert", notice: notice %>
<% end %>

<div class="w-full px-4 mt-4">
  <!-- Tabla de Ordenes Cumplidas -->
  <div class="relative flex flex-col w-full px-6 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border">
    <div class="relative mx-4 mt-4 overflow-hidden text-gray-700 bg-white rounded-none bg-clip-border">
      <div class="flex flex-col items-center justify-between gap-8 mb-4 md:flex-row md:items-center">
        <div>
          <h2 class="block font-sans text-xl font-semibold leading-snug tracking-normal text-center text-blue-gray-900 md:text-left md:mt-12">
            Ordenes Pagadas
          </h2>
        </div>
        <div class="flex justify-center gap-2 shrink-0 md:w-auto">
          <%= link_to "Nueva Orden", new_admin_order_path, class: "flex items-center gap-3 rounded-lg bg-gray-900 py-2 px-4 text-white font-bold uppercase shadow-md hover:shadow-lg focus:opacity-85 active:opacity-85" %>
        </div>
      </div>
    </div>

    <div class="px-4 overflow-auto">
      <table class="w-full mx-auto text-left rounded-lg table-auto min-w-max">
        <thead class="bg-gray-200 rounded-lg">
          <tr>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Order</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Fulfilled</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Date</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Total</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @admin_orders.each do |admin_order| %>
            <tr class="border-b">
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.id.slice(1,5) %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.fulfilled %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.created_at.strftime("%Y-%m-%d") %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.total %></td>
              <td class="p-4 border-b border-blue-gray-50">
                <%= link_to edit_admin_order_path(admin_order), class: "text-blue-500" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Tabla de Ordenes No Cumplidas -->
  <div class="relative flex flex-col w-full px-6 mt-8 text-gray-700 bg-white shadow-md lg:px-10 rounded-xl bg-clip-border">
    <div class="relative mx-4 mt-4 overflow-hidden text-gray-700 bg-white rounded-none bg-clip-border">
      <div class="flex flex-col items-center justify-between gap-8 mb-4 md:flex-row md:items-center">
        <div>
          <h2 class="block leading-snug tracking-normal text-center font-semi bold font-sanstext-xl text-blue-gray-900 md:text-left md:mt-12">
            Ordenes No Pagadas
          </h2>
        </div>
      </div>
    </div>

    <div class="px-4 overflow-auto">
      <table class="w-full mx-auto text-left table-auto min-w-max ">
        <thead class="bg-gray-200 ">
          <tr>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Order</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Fulfilled</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Date</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Total</th>
            <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @not_fulfilled_orders.each do |admin_order| %>
            <tr class="border-b">
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.id.slice(1,5) %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.fulfilled %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.created_at.strftime("%Y-%m-%d") %></td>
              <td class="p-4 border-b border-blue-gray-50"><%= admin_order.total %></td>
              <td class="p-4 border-b border-blue-gray-50">
                <%= link_to edit_admin_order_path(admin_order), class: "text-blue-500" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
