<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>


<div class="relative flex flex-col w-full h-full text-gray-700 bg-white shadow-md rounded-xl bg-clip-border">
  <div class="relative mx-4 mt-4 overflow-hidden text-gray-700 bg-white rounded-none bg-clip-border">
    <div class="flex flex-col justify-between gap-8 mb-4 md:flex-row md:items-center">
      <div>
        <h5 class="block font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
          Recent Orders
        </h5>
        <p class="block mt-1 font-sans text-base antialiased font-normal leading-relaxed text-gray-700">
          These are details about the last orders
        </p>
      </div>
      <div class="flex w-full gap-2 shrink-0 md:w-max">
        <%= link_to "New order", new_admin_order_path, class: "flex select-none items-center gap-3 rounded-lg bg-gray-900 py-2 px-4 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none" %>
      </div>
    </div>
  </div>
  <div class="p-6 px-0 overflow-scroll">
    <table class="w-full text-left table-auto min-w-max">
      <thead>
        <tr>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">Order</p>
          </th>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">Amount</p>
          </th>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">Date</p>
          </th>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">Fulfilled</p>
          </th>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70">User</p>
          </th>
          <th class="p-4 border-y border-blue-gray-100 bg-blue-gray-50/50">
            <p class="block font-sans text-sm antialiased font-normal leading-none text-blue-gray-900 opacity-70"></p>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @admin_orders.each do |admin_order| %>
  <tr class="border-b">
    <td class="p-4 border-b border-blue-gray-50">
      <div class="flex items-center gap-3">
        <!-- Si deseas agregar una imagen relacionada, puedes poner una imagen representativa aquÃ­ -->
        <p class="block font-sans text-sm antialiased font-bold leading-normal text-blue-gray-900"><%= admin_order.id %></p>
      </div>
    </td>
    <td class="p-4 border-b border-blue-gray-50">
      <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900"><%= admin_order.created_at.strftime("%Y-%m-%d") %></p>
    </td>
    <td class="p-4 border-b border-blue-gray-50">
      <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900"><%= admin_order.created_at.strftime("%Y-%m-%d") %></p>
    </td>
    <td class="p-4 border-b border-blue-gray-50">
      <p class="block font-sans text-sm antialiased font-normal leading-normal text-blue-gray-900"><%= admin_order.fulfilled ? 'Yes' : 'No' %></p>
    </td>
    <td class="p-4 border-b border-blue-gray-50">
      <div class="w-max">
        <div class="relative grid items-center px-2 py-1 font-sans text-xs font-bold text-green-900 uppercase rounded-md select-none whitespace-nowrap bg-green-500/20">
          <span class=""><%= admin_order.fulfilled ? 'paid' : 'pending' %></span>
        </div>
      </div>
    </td>
    <td class="p-4 border-b border-blue-gray-50">
      <%= link_to "Show", [:admin, admin_order], class: "text-white bg-blue-500 px-3 py-1 rounded" %>
    </td>
  </tr>
<% end %>

      </tbody>
    </table>
    <!-- Pagination -->
    <div class="flex items-center justify-center mt-4">
      <button class="px-4 py-2 text-sm bg-gray-200 rounded-md">Previous</button>
      <button class="px-4 py-2 mx-2 text-sm bg-gray-200 rounded-md">1</button>
      <button class="px-4 py-2 mx-2 text-sm bg-gray-200 rounded-md">2</button>
      <button class="px-4 py-2 text-sm bg-gray-200 rounded-md">Next</button>
    </div>
  </div>
</div>


