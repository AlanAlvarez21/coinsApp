<section class="py-16 bg-white">

<%# <%= breadcrumb({label: 'Templates', url: '/templates'}, {label: 'Flowbite', url: templates_path}, {label: 'Current Page', url: ''}) %> %>

  <div class="max-w-screen-xl px-4 mx-auto">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Galería de imágenes -->
      <div class="max-w-md mx-auto shrink-0 lg:max-w-lg">
        <% if @product.image_url.present? %>
          <div class="grid grid-cols-1 gap-4 lg:grid-cols-2">
            <% Array(@product.image_url).each do |image_url| %>
              <%= image_tag(image_url, class: "object-cover w-full h-64 rounded-lg") %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-600 dark:text-gray-400">
            No hay imágenes disponibles para este producto.
          </p>
        <% end %>
      </div>

      <!-- Información del producto -->
      <div class="h-full pt-8 text-gray-800 bg-white lg:pt-0">
        <h1 class="text-4xl font-bold text-black">
          <%= @product.name %>
        </h1>
        <p class="my-4 text-2xl font-extrabold text-blue-600">
          <%= number_to_currency(@product.price) %>
        </p>
        <p class="mb-6 text-gray-800">
          <%= @product.description %>
        </p>

        <!-- Tamaños disponibles -->
        <h3 class="mb-4 text-lg font-semibold text-gray-800">
          Tamaños disponibles:
        </h3>
        <div class="flex flex-wrap gap-2">
          <% @product.stocks.each do |stock| %>
            <% if stock.amount > 0 %>
              <button class="px-4 py-2 text-sm font-semibold text-white bg-blue-500 rounded hover:bg-blue-600">
                <%= stock.size %>
              </button>
            <% else %>
              <button class="px-4 py-2 text-sm font-semibold text-gray-400 bg-gray-200 rounded" disabled>
                <%= stock.size %> (Agotado)
              </button>
            <% end %>
          <% end %>
        </div>

        <!-- Botones de acción -->
        <div class="flex gap-4 mt-6">
          <a
            href="#"
            title="Añadir a favoritos"
            class="py-2.5 px-5 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700"
          >
            Añadir a favoritos
          </a>
          <a
            href="#"
            title="Añadir al carrito"
            class="py-2.5 px-5 text-sm font-medium text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-700"
          >
            Añadir al carrito
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
